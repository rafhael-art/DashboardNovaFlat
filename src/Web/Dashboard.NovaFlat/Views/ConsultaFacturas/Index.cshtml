
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- Toastr -->
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/css/Custumer.css" rel="stylesheet" />
}

<div class="content-header">

    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 class="m-0 text-dark">Consulta Facturas</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")"><i class="fas fa-home"></i> Inicio</a></li>
                    <li class="breadcrumb-item">Reportes</li>
                    <li class="breadcrumb-item active">Consulta Facturas</li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->

    <div class="card card-default">
        <!-- /.card-header -->
        <div class="card-body" style="display: block;">
            <div class="row">

                <div class="form-group col-sm-2">
                    <label for="txtAnioFactura">Año :</label>
                    <div class="col-xs-5" style="display: flex;">
                        <select id="txtAnioFactura" class="form-control input-sm"></select>
                    </div>
                </div>

                <div class="form-group col-sm-2">
                    <label for="txtMesFactura">Mes :</label>
                    <div class="col-xs-5">
                        <select id="txtMesFactura" class="form-control input-sm"></select>
                    </div>
                </div>

                <div class="form-group col-sm-2">
                    <label for="txtFlat">Flat :</label>
                    <div class="col-xs-5">
                        <select id="txtFlat" class="form-control input-sm">
                            <option value="3" selected>TODOS</option>
                            <option value="1">FLAT</option>
                            <option value="0">NO FLAT</option>
                        </select>
                    </div>
                </div>

                <div class="form-group col-sm-2">
                    <label for="txtFacturas">Facturas:</label>
                    <div class="col-xs-5">
                        <select id="txtFacturas" class="form-control input-sm"></select>
                    </div>
                </div>

                <div class="form-group col-sm-2">
                    <label for="txtNumEvento">Nro Evento</label>
                    <div class="col-xs-5">
                        <input type="number" id="txtNumEvento" autocomplete="off" class="form-control input-sm" onkeyup="eventoChange()">
                    </div>
                </div>

                <div class="form-group btn-buscar">
                    <div class="col-xs-5">

                        <button type="button" id="btn-exportar-xlsx" onclick=" location.href = urlExportarXlsx;" class="btn btn-success btn-sm">Exportar Xlsx <i class="fas fa-download"></i></button>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body">

                        <table id="DataTable" class="table table-bordered table-hover" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th colspan="26" style="text-align:center; background-color:darkgray">Datos sobre el vehiculo</th>
                                    <th colspan="9" style="text-align:center; background-color:blueviolet">Comprobantes de seguimiento</th>

                                    <th colspan="8" style="text-align:center; background-color:darkorange">Repuesto</th>



                                    <th colspan="3" style="text-align:center; background-color:cornflowerblue">Causa de fallas</th>

                                </tr>
                                <tr>
                                    <th style="background-color: darkgray">N° de Evento</th>
                                    <th style="background-color: darkgray">Clase</th>
                                    <th style="background-color: darkgray">Placa interna</th>
                                    <th style="background-color: darkgray">Placa rodaje</th>
                                    <th style="background-color: darkgray">Marca</th>
                                    <th style="background-color: darkgray">Modelo</th>
                                    <th style="background-color: darkgray">N° Motor</th>
                                    <th style="background-color: darkgray">N° Serie-VIN</th>
                                    <th style="background-color: darkgray">Depa</th>
                                    <th style="background-color: darkgray">Provincia</th>
                                    <th style="background-color: darkgray">Ciudad</th>
                                    <th style="background-color: darkgray">Latitud</th>
                                    <th style="background-color: darkgray">Longitud</th>
                                    <th style="background-color: darkgray">Costo.Uni US$</th>
                                    <th style="background-color: darkgray">Año Fabricacion</th>
                                    <th style="background-color: darkgray">Año entrega PNP</th>
                                    <th style="background-color: darkgray">Fecha entrega PNP</th>
                                    <th style="background-color: darkgray">Inicio Operaciones</th>
                                    <th style="background-color: darkgray">Nro poliza</th>
                                    <th style="background-color: darkgray">Nro Certificado</th>
                                    <th style="background-color: darkgray">Estado</th>
                                    <th style="background-color: darkgray">Fecha baja</th>
                                    <th style="background-color: darkgray">Motivo baja</th>
                                    <th style="background-color: darkgray">Costo acumulado total(sin IGV)</th>
                                    <th style="background-color: darkgray">Costo acumulado FLAT(sin IGV)</th>
                                    <th style="background-color: darkgray">Costo acumulado adicional(sin IGV)</th>


                                    <th style="background-color: blueviolet">Taller responsable</th>
                                    <th style="background-color: blueviolet">Ruc</th>
                                    <th style="background-color: blueviolet">N° Presupuesto</th>
                                    <th style="background-color: blueviolet">Factura</th>
                                    <th style="background-color: blueviolet">Mes Factura</th>
                                    <th style="background-color: blueviolet">Moneda</th>
                                    <th style="background-color: blueviolet">Monto factura sin IGV</th>
                                    <th style="background-color: blueviolet">Flat</th>
                                    <th style="background-color: blueviolet">Trab.Realizado</th>

                                    <th style="background-color: darkorange">KM Ingreso Taller</th>


                                    <th style="background-color: darkorange">Cod Respuesto</th>
                                    <th style="background-color: darkorange">Descripcion</th>
                                    <th style="background-color: darkorange">Costo sin IGV</th>
                                    <th style="background-color: darkorange">KM Ultimo cambio</th>
                                    <th style="background-color: darkorange">KM vida util real</th>
                                    <th style="background-color: darkorange">KM vida util fabricante</th>

                                    <th style="background-color: darkorange">Tipo cambio</th>

                                    <th style="background-color: cornflowerblue">Motivo de falla</th>
                                    <th style="background-color: cornflowerblue">Mecanico responsable</th>
                                    <th style="background-color: cornflowerblue">Tipo de mantenimiento</th>

                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <!-- ./card-body -->
                    <div class="card-footer">
                        <div class="row" id="footer-estadoUnidad">


                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->



    <div class="modal fade" id="modal-actualizarVehiculo" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Repuesto : <span id="title-modal-vehiculo"></span> </h1>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="card card-default">

                            <!-- /.card-header -->
                            <div class="card-body">
                                <form role="form" id="form-actualizarVehiculo">
                                    <div class="row">
                                        <div class="form-group col-sm-5">
                                            <label for="txtCodRepuesto">Codigo de Repuesto</label>
                                            <div class="col-xs-12">
                                                <input type="text" id="txtCodRepuesto" name="txtCodRepuesto" autocomplete="off" readonly class="form-control input-sm">
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-5">
                                            <label for="txtkmVidaUtil">KM vida útil de fabricante</label>
                                            <div class="col-xs-12">
                                                <input id="txtkmVidaUtil" name="txtkmVidaUtil" autocomplete="off" class="form-control input-sm">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.row -->
                                    <input type="hidden" id="Id_vehiculo" />
                                </form>
                            </div>

                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="btn-guardar">Guardar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>



</div>





@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/js/date-dd-MMM-yyyy.js"></script>

    <script src="~/ViewJs/jsConsultaFacturas.js"></script>

}


