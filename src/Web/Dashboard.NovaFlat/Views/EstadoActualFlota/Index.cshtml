
@{
    ViewBag.Title = "Consulta Estado Flota PNP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <!-- Toastr -->
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/css/Custumer.css" rel="stylesheet" />
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 class="m-0 text-dark">Consulta Estado Flota PNP</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")"><i class="fas fa-home"></i> Inicio</a></li>
                    <li class="breadcrumb-item">Consultas</li>
                    <li class="breadcrumb-item active">Consulta Estado Flota</li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->

    <div class="card card-default">
        <!-- /.card-header -->
        <div class="card-body" style="display: block;">
            <div class="row">



                <div class="form-group col-sm-2">
                    <label for="txtclase">Clase </label>
                    <div class="col-xs-5">
                        <select id="txtclase" class="form-control input-sm"></select>
                    </div>

                </div>

                <div class="form-group col-sm-2">
                    <label for="txtplaca">Placa Interna</label>
                    <div class="col-xs-5">
                        <input type="text" id="txtplaca" autocomplete="off" class="form-control input-sm" onkeypress="buscar(event)">
                    </div>
                </div>

                <div class="form-group col-sm-2">
                    <label for="txtestado">Estado unidad</label>
                    <div class="col-xs-5">
                        <select id="txtestado" class="form-control input-sm"></select>
                    </div>
                </div>

                <div class="form-group btn-buscar">
                    <div class="col-xs-5">
                        <button type="button" onclick="fTableEstadoActualFlotaReload()" class="btn btn-info btn-sm" id="btn-buscar">Buscar</button>
                    </div>
                </div>


                <div class="form-group btn-buscar">
                    <div class="col-xs-5">


                        <button type="submit" onclick="fExpotarXlsx()" class="btn btn-success btn-sm" id="btn-descagarXlsx">Xlsx <i class="fas fa-file-excel"></i> <i class="fas fa-download"></i> </button>

                    </div>
                </div>

            </div>
            <!-- /.row -->
        </div>

    </div>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body">

                        <table id="tableEstadoActualFlota" class="table table-bordered table-hover" role="grid" style="width:100%">
                            <thead>
                                <tr>
                                    <th colspan="5" style="text-align:center; background-color:white"></th>
                                    <th colspan="2" style="text-align:center; background-color:darkorange">INGRESO</th>
                                    <th colspan="1" style="text-align:center; background-color:darkseagreen">REALIZADO</th>
                                    <th colspan="1" style="text-align:center; background-color:darkseagreen">PROXIMO MANT.</th>
                                    <th colspan="2" style="text-align:center; background-color:white"></th>
                                    <th colspan="2" style="text-align: center; background-color: darkseagreen">SALIDA</th>
                                    <th colspan="1" style="text-align:center; background-color:white"></th>
                                </tr>
                                <tr>
                                    <th>Placa</th>
                                    <th>Clase</th>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Estado</th>
                                    <th>Hora de Ingreso</th>
                                    <th>Fecha de Ingreso</th>
                                    <th>Km</th>
                                    <th>Km</th>
                                    <th>Motivo Inoperativa</th>
                                    <th>Observaciones de Retrasos</th>
                                    <th>Fecha de Salida</th>
                                    <th>Hora de Salida</th>
                                    <th>Salida Estimada</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <!-- ./card-body -->
                    <div class="card-footer">
                        <div class="row" id="footer-ConsultaEstadoFlota">


                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->



</div>

@section scripts{
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/ViewJs/jsEstadoActualFlota.js"></script>
}




