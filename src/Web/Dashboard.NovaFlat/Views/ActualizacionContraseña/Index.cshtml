
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- Toastr -->
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/css/Custumer.css" rel="stylesheet" />
}
<div class="content-header">

    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 class="m-0 text-dark">Actualización de Contraseña</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")"><i class="fas fa-home"></i> Inicio</a></li>
                    <li class="breadcrumb-item">Registro de Datos</li>
                    <li class="breadcrumb-item active">Actualización de Contraseña</li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <br />
                        <br /><br /><br />                        <div class="row justify-content-center">

                            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                                <div class="image">
                                    <img src="~/Imagen/avatar2.png" class="img-circle" alt="User Image">
                                </div>
                                <div>
                                    @if (WebSession.Usuario != null)
                                    {
                                        @Html.Raw(string.Format("<span class='d-block' id='usernameLogOn' style='color:black'><strong>{0}</strong></span>", WebSession.Usuario.Username!.ToUpper()))
                                        <a href="#"><i class="fa fa-circle text-success"></i> conectado</a>
                                    }
                                </div>
                            </div>
                            <div class="w-100"></div>

                            <input hidden type="text" class="form-control" id="usua_icod_usuario" name="usua_icod_usuario" aria-describedby="emailHelp">
                            <form class="col-4">
                                <div class="form-group">
                                    <label for="usua_codigo_usuario">Usuario :</label>
                                    <input readonly type="text" class="form-control" id="usua_codigo_usuario" name="usua_codigo_usuario" aria-describedby="emailHelp">
                                </div>
                                <div class="form-group pt-2">
                                    <label for="usua_nombre_usuario">Nombres y Apellidos :</label>
                                    <input readonly type="text" class="form-control" id="usua_nombre_usuario" name="usua_nombre_usuario" aria-describedby="emailHelp">
                                </div>
                                <div class="form-group pt-2">
                                    <label for="usua_password_usuario">Contraseña :</label>
                                    <input readonly type="password" class="form-control" id="usua_password_usuario" name="usua_password_usuario">
                                </div>
                                <div class="form-check pl-5 pt-2">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                    <label class="form-check-label" for="exampleCheck1">Ver Contraseña</label>
                                    <button onclick="fCambiarContrasenia()" type="button" class="btn btn-success float-right">Cambiar Contraseña</button>
                                </div>
                                <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<div class="modal fade" id="modal-actualizarContrasenia" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Actualizar Contraseña : <span id="title-modal-vehiculo"></span> </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="card card-default">

                        <!-- /.card-header -->
                        <div class="card-body">
                            <form role="form" id="form-actualizarVehiculo">
                                <div class="row justify-content-center">
                                    <div class="form-group col-sm-10">
                                        <label for="txtContrasenia">Ingrese Nueva Constraseña :</label>
                                        <div class="col-xs-12">
                                            <input type="password" id="txtContrasenia" name="txtContrasenia" autocomplete="off" class="form-control input-sm">
                                        </div>
                                    </div>
                                    <div class="form-group col-sm-10 mt-3">
                                        <label for="txtContrasenia2">Confirme Contraseña :</label>
                                        <div class="col-xs-12">
                                            <input type="password" id="txtContrasenia2" name="txtContrasenia2" autocomplete="off" class="form-control input-sm">
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </form>
                        </div>

                    </div>


                </div>
                <!-- /.card-body -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                <button type="button" onclick="fGuardar()" class="btn btn-primary" id="btn-guardar">Guardar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



@section scripts{
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.21/dataRender/datetime.js" charset="utf8"></script>
    <script src="~/js/date-dd-MMM-yyyy.js"></script>
    <script src="~/ViewJs/jsActualizacionContraseñas.js"></script>
}

